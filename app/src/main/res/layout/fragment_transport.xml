<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPageFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearlayout_main_top_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="2"
                android:text="@string/main_transport"
                android:textSize="72sp"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/main_section_background">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="12dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="2"
                            android:text="@string/settings_start"
                            android:textColor="@color/white"
                            android:textSize="35sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editTextTextPersonNae"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:text="@string/settings_start_1" />


                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="12dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="12dp">

                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="2"
                            android:text="@string/settings_final"
                            android:textColor="@color/white"
                            android:textSize="35sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editTextTextPersonName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:text="@string/settings_final_1"
                            />


                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="5dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_main_children"
                            android:layout_width="190dp"
                            android:layout_height="120dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:height="150dp"
                            android:backgroundTint="@color/main_transport"

                            android:includeFontPadding="false"
                            android:paddingStart="15dp"
                            android:paddingEnd="0dp"
                            android:text="@string/settings_taxi"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            app:cornerRadius="15dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_main_transport"
                            android:layout_width="60dp"
                            android:layout_height="120dp"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:height="150dp"
                            android:backgroundTint="@color/main_shopping"
                            android:includeFontPadding="false"
                            android:paddingStart="15dp"
                            android:paddingEnd="0dp"
                            android:text="@string/settings_bus"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            app:cornerRadius="15dp" />

                    </TableRow>

                </TableLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="410dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/main_section_background"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="12dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="10dp">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:background="@drawable/main_section_background">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:paddingStart="12dp"
                            android:paddingTop="5dp"
                            android:paddingEnd="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="2"
                                android:text="@string/settings_park"
                                android:textColor="@color/black"
                                android:textSize="35sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="2"
                                android:text="@string/settings_park_1"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                 />
                        </TableRow>

                        <TableRow
                            android:layout_width="38dp"
                            android:layout_height="150dp"
                            android:paddingStart="20dp"
                            android:paddingTop="5dp"
                            android:paddingEnd="12dp">

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/fengjing" />
                        </TableRow>

                        <TableRow
                            android:layout_width="149dp"
                            android:layout_height="match_parent"
                            android:paddingStart="10dp"
                            android:paddingTop="5dp"
                            android:paddingEnd="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="37dp"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="2"
                                android:text="@string/settings_park_type"
                                android:textColor="@color/black"
                                android:textSize="30sp"
                                android:gravity="center"/>
                        </TableRow>

                        <TableRow
                            android:layout_width="149dp"
                            android:layout_height="match_parent"
                            android:paddingStart="10dp"
                            android:paddingTop="5dp"
                            android:paddingEnd="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="37dp"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="2"
                                android:text="@string/settings_park_site"
                                android:textColor="@color/black"
                                android:textSize="30sp"
                                android:gravity="center"/>
                        </TableRow>

                        <TableRow
                            android:layout_width="149dp"
                            android:layout_height="match_parent"
                            android:paddingStart="10dp"
                            android:paddingTop="5dp"
                            android:paddingEnd="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="37dp"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="2"
                                android:text="@string/settings_park_level"
                                android:textColor="@color/black"
                                android:textSize="30sp"
                                android:gravity="center"/>
                        </TableRow>
                        <TableRow
                            android:layout_width="149dp"
                            android:layout_height="match_parent"
                            android:paddingStart="50dp"
                            android:paddingTop="5dp"
                            android:paddingEnd="50dp">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/button_main_shopping"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:height="150dp"
                                android:backgroundTint="@color/main_family"
                                android:includeFontPadding="false"
                                android:paddingStart="10dp"
                                android:paddingEnd="0dp"
                                android:text="@string/settings_go"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white"
                                android:textSize="30sp"
                                app:cornerRadius="15dp"
                                android:textStyle="bold"
                                />
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>